# Application Settings
DEBUG=False                    # True für Entwicklung, False für Produktion
APP_NAME=ScheinCam

# OBS Connection - WICHTIG: Anpassen!
# Windows/macOS: host.docker.internal
# Linux: host.docker.internal (wird automatisch gemappt via extra_hosts)
# Oder direkte IP-Adresse des OBS-Hosts, z.B. 192.168.1.100
OBS_HOST=host.docker.internal  # IP/Hostname wo OBS läuft
OBS_PORT=4455                  # OBS WebSocket Port
OBS_PASSWORD=REPLACE_ME        # Dein OBS WebSocket Passwort

# Recording Schedule (24-hour format)
START_TIME=19:50:00           # Automatischer Aufnahmestart
END_TIME=22:10:00             # Automatisches Aufnahmeende
SHUTDOWN_TIME=01:00:00        # System-Shutdown-Zeit

# Weekdays (0=Monday, 6=Sunday)
# Welche Wochentage soll aufgenommen werden?
WEEKDAYS="2,3,4,5,6"          # Mi-So

# File Management
CLEANUP_INTERVAL_SECONDS=3600  # Aufräum-Intervall (jede Stunde)
DELETE_AGE_SECONDS=1209600    # Videos nach 14 Tagen löschen
VIDEO_DIRECTORY=videos
ASSETS_DIRECTORY=assets
LOGS_DIRECTORY=logs

# UI Settings
SHOW_LOGO=True               # Logo im Video anzeigen?

# WebSocket
WS_HEARTBEAT_INTERVAL=30

# Authentication
WEB_PASSWORD=REPLACE_ME